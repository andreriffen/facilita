# Ativa o m처dulo de reescrita
RewriteEngine On

# Redireciona URLs com extens찾o .html para URLs sem a extens찾o (SEO-friendly)
RewriteCond %{THE_REQUEST} \s/([^.]+)\.html [NC]
RewriteRule ^ /%1 [R=301,L]

# Reescreve URLs sem extens찾o para carregar arquivos .html correspondentes
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*?)/?$ $1.html [L]
